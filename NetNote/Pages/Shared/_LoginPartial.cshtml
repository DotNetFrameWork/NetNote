@using Microsoft.AspNetCore.Identity
@using NetNote.Models
@inject SignInManager<NoteUser> SignInManager
@inject UserManager<NoteUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-page="/Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark disabled" href="javascript:;">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="javascript:document.getElementById('logoutForm').submit()">注销</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Register">注册</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Login">登录</a>
        </li>
    </ul>
}
