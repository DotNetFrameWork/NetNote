@page
@model RegisterModel
@{
    ViewData["Title"] = "注册新用户";
}
<div class="row">
    <div class="col-md-12">
        <form method="post" class="form-horizontal" role="form">
            <h4>注册新用户</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Register.UserName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Register.UserName" class="form-control" required />
                    <span asp-validation-for="Register.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Register.Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Register.Email" class="form-control" required />
                    <span asp-validation-for="Register.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Register.Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Register.Password" class="form-control" required />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Register.ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Register.ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="提交注册" />
                </div>
            </div>
        </form>
    </div>
</div>